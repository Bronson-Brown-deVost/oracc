<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:xforms="http://www.w3.org/2002/xforms"
      xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:xpd="http://oracc.org/ns/xpd/1.0" xpd:dummy="I am the Fly">
  <head>
    <title>@@PROJECT@@ Pager</title>
    <link rel="stylesheet" type="text/css" href="/css/p2.css"/>
    <link rel="stylesheet" type="text/css" href="/@@PROJECT@@/p2.csx"/>
    <script type="text/javascript" src="/js/oas.js">
</script>
    <script type="text/javascript" src="/js/winlib.js">
</script>
    <script type="text/javascript" src="/js/p2.js">
</script>
    <script src="/js/p2-shortcuts.js" type="text/javascript">
</script>
    <script src="/js/p2-keys.js" type="text/javascript">
</script>
    <xforms:model id="pagerModel">
      <xforms:instance id="pager">
	<pager xmlns="">
	  <project>@@PROJECT@@</project>
	  <session>@@SESSION@@</session>
	  <mode></mode>
	  <bump/>
	  <state>startup</state>
	  <newstate/>
	  <outline-state>show</outline-state>
	  <pushed-state/>
	  <list>(none)</list>
	  <glossary>#none</glossary>
	  <search/>
	  <default-sort/>
	  <special-sort/>
	  <pgtype>auto</pgtype>
	  <page>0</page>
	  <per-page>25</per-page>
	  <item>0</item>
	  <itemline>0</itemline>
	  <itemctxt>0</itemctxt>
	  <itemtype>#none</itemtype>
	  <zoom>0</zoom>
	  <cetype>line</cetype>
	  <trace/>
	  <translation>en</translation>
	  <transonly>false</transonly>
	  <pages>0</pages>
	  <items>0</items>
	  <uzpage/>
	  <zprev/>
	  <znext/>
	  <outline/>
	  <content/>
	  <browse-ready>false</browse-ready>
	  <item-init>false</item-init>
	  <serialize>true</serialize>
	  <version>p2-base.xml/3b2</version>
	</pager>
      </xforms:instance>

      <xforms:instance id="dummy">
	<dummy xmlns="">
	  <dummy0>dummy0</dummy0>
	  <dummy1>dummy1</dummy1>
	</dummy>
      </xforms:instance>

      <xforms:instance src="/@@PROJECT@@/config.xml" id="config"/>

      <xforms:instance id="search">
	<search xmlns="">
	  <project>@@PROJECT@@</project>
	  <session>@@SESSION@@</session>
	  <use-unicode>false</use-unicode>
	  <default-index>txt</default-index>
	  <glossary>#none</glossary>
	  <serialize>true</serialize>
	  <search type="simple">
	    <toks/>
	  </search>
	  <result count="0" list="(none)">
	    <notify/>
	    <toks/>
	  </result>
	</search>
      </xforms:instance>

      <xforms:instance id="private">
	<private xmlns="">
	  <oas>javascript:oasPopup('/@@PROJECT@@/as/@@SESSION@@')</oas>
	  <hideOutline>javascript:setRight100()</hideOutline>
	  <showOutline>javascript:setRight80()</showOutline>
	  <setTitle>javascript:setTitle()</setTitle>
	  <oraccHelp>javascript:oraccHelp()</oraccHelp>
	  <pll>#none</pll>
	  <item-dd>
	    <cat l="Catalog items" v="cat"/>
	    <cbd l="Glossary items" v="cbd"/>
	    <txt l="Text items" v="txt"/>
	  </item-dd>
	  <notrans l="No translation" v="#none"/>
	</private>
      </xforms:instance>      

      <xforms:instance id="browse">
	<browse xmlns="">
	  <project>@@PROJECT@@</project>
	  <session>@@SESSION@@</session>
	  <use-unicode>false</use-unicode>
	  <default-index>txt</default-index>
	  <list/>
	  <glossary>#none</glossary>
	  <serialize>true</serialize>
	  <search/>
	  <result count="0" list="(none)">
	    <notify/>
	    <toks/>
	  </result>
	  <adhoc/>
	  <browse-list/>
	  <xis-lang/>
	  <xis-id/>
	</browse>
      </xforms:instance>

      <xforms:submission action="/pager" method="post" id="post-pager"
			 mediatype="application/xml" replace="instance">
	<xforms:action ev:event="xforms-submit-done">
	  <xforms:setvalue ref="instance('pager')/state" 
			   value="'default'"
			   if="instance('pager')/state[.='search']"/>
	 <xforms:setvalue ref="instance('pager')/page"
			  value="choose(instance('pager')/items[.>0],'1','0')"
			  if="instance('pager')/items>0 and instance('pager')/page=0"/>
	  <xforms:load>
	    <xforms:resource
		value="instance('pager')/outline"/>
	  </xforms:load>
	  <xforms:load>
	    <xforms:resource
		value="instance('pager')/content"/>
	  </xforms:load>
	</xforms:action>
      </xforms:submission>

      <xforms:submission action="/pager" method="post" id="post-search"
			 mediatype="application/xml" 
			 ref="instance('search')" replace="instance">
<!--
	<xforms:message level="modal" ev:event="xforms-submit-error">
	  Please enter some words to search for.
	</xforms:message>
 -->
	<xforms:action ev:event="xforms-submit-done">
	  <xforms:setvalue ref="instance('pager')/list" value="instance('search')/result/@list"/>
	  <xforms:setvalue ref="instance('pager')/pages" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/items" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/page"
			   value="choose(instance('pager')/items[.>0],'1','0')"/>
	  <xforms:setvalue ref="instance('pager')/item" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/zoom" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/search" value="'1'"/>
	  <xforms:setvalue ref="instance('pager')/state" 
			   value="choose(instance('pager')/state='gbrowse',
				  'gsearch','search')"/>
	  <xforms:send submission="post-pager"/>
	</xforms:action>
      </xforms:submission>

      <xforms:submission action="/pager" method="post" id="post-browse"
			 mediatype="application/xml" 
			 ref="instance('browse')" replace="instance">
	<xforms:action ev:event="xforms-submit-error">
	  <xforms:message level="modal" ev:event="xforms-submit-error">
	    Error submitting post-browse
	  </xforms:message>
	</xforms:action>
	<xforms:action ev:event="xforms-submit-done">
	  <xforms:setvalue ref="instance('pager')/list" value="instance('browse')/result/@list"/>
	  <xforms:setvalue ref="instance('pager')/page"
			   value="choose(instance('pager')/items[.>0],'1','0')"/>
	  <xforms:setvalue ref="instance('pager')/item" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/zoom" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/search" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/state"
			   value="choose(instance('config')/xpd:option[@name='outline-special-select'][@value='false'],
				  'default','special')"/>
	  <xforms:send submission="post-pager"/>
	</xforms:action>
      </xforms:submission>

      <xforms:submission action="/pager" method="post" id="post-glossary"
			 mediatype="application/xml" 
			 ref="instance('pager')" replace="instance">
	<xforms:action ev:event="xforms-submit-done">
	  <xforms:setvalue ref="instance('pager')/glossary" value="instance('browse')/glossary"/>
	  <xforms:setvalue ref="instance('pager')/items" value="'0'"/>
	  <xforms:setvalue ref="instance('search')/glossary" value="instance('browse')/glossary"/>
	  <xforms:setvalue ref="instance('pager')/search" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/state" value="'gbrowse'"/>
	  <xforms:send submission="post-pager"/>
	</xforms:action>
      </xforms:submission>

      <xforms:submission  
	  id="right80"
	  method="get"
	  serialization="none"
	  replace="none"
	  resource="javascript:setRight80()"/>

      <xforms:submission  
	  id="right100"
	  method="get"
	  serialization="none"
	  replace="none"
	  resource="javascript:setRight100()"/>

      <xforms:submission  
	  id="htmlTitle"
	  method="get"
	  serialization="none"
	  replace="none"
	  resource="javascript:setTitle()"/>
      
      <!--<xforms:bind nodeset="instance('pager')/item" relevant=".>1"/>-->

<!-- This bind hoses the zoom element of pager instance at least up to r545
      <xforms:bind nodeset="instance('pager')/zoom" relevant="instance('pager')/zoom[.>0 
							      and (../state[.='default']
							      	   or ../state[.='special'])]"/>
 -->

<!--			     and instance('pager')/state[not(starts-with(.,'g'))]"/>-->

      <xforms:bind nodeset="instance('pager')/default-sort" relevant="instance('pager')/state[.='default']"/>
      <xforms:bind nodeset="instance('pager')/special-sort" relevant="instance('pager')/state[.='special']"/>

<!--
      <xforms:bind nodeset="instance('private')/pll" relevant="instance('private')/pll[string-length(.)>0]"/>
 -->

      <!-- Hide the index and result format dropdowns when in glossary mode -->
      <xforms:bind nodeset="instance('search')/default-index" 
		   relevant="instance('pager')/glossary[.='#none']"/>
      <xforms:bind nodeset="instance('pager')/cetype" 
		   relevant="instance('search')/default-index[.='txt' or .='lem']
			     and instance('pager')/glossary[.='#none']"/>

<!--		   relevant="instance('pager')/state[not(starts-with(.,'g'))]"/> -->

<!--      <xforms:bind nodeset="instance('pager')/glossary" 
		   relevant="instance('pager')/glossary[not(.='#none')]"/> -->

      <xforms:bind nodeset="instance('pager')/transonly" type="xs:boolean"/>
      <xforms:bind nodeset="instance('pager')/transonly" 
		   relevant="instance('pager')/translation[not(.='#none')]"/>

<!--      <xforms:bind nodeset="instance('search')/toks" required="true()"/> -->

      <xforms:bind nodeset="instance('search')/use-unicode" type="xs:boolean"/>

      <xforms:bind nodeset="instance('pager')/item" type="xs:integer"/>
      <xforms:bind constraint=". >= 0 and . &lt;= instance('pager')/items" 
		   nodeset="instance('pager')/item"/>

      <xforms:bind nodeset="instance('pager')/page" type="xs:integer"/>
      <xforms:bind constraint=". >= 0 and . &lt;= instance('pager')/pages" 
		   nodeset="instance('pager')/page"/>

      <xforms:bind nodeset="instance('pager')/pages" type="xs:integer"/>

      <xforms:bind nodeset="instance('pager')/per-page" type="xs:integer"/>
      <xforms:bind constraint=". > 0 and . &lt; 101" nodeset="instance('pager')/per-page"/>

      <xforms:action ev:event="xforms-ready">
	<xforms:send submission="htmlTitle"/>
	<xforms:setvalue ref="instance('pager')/default-sort" 
			 value="instance('config')/xpd:option[@name='outline-default-sort-fields']/@value"/>
	<xforms:setvalue ref="instance('pager')/special-sort" 
			 value="instance('config')/xpd:option[@name='outline-special-sort-fields']/@value"/>
	<xforms:action if="instance('pager')/browse-ready[not(.='true')]">
	  <xforms:setvalue ref="instance('browse')/browse-list" 
			   value="choose(instance('config')/xpd:option[@name='outline-special-select'][@value='true'],
				  instance('config')/xpd:option[@name='outline-special-list-name']/@value,
				  '_all')"/>
	  <xforms:send submission="post-browse"/>
	</xforms:action>
	<xforms:action if="instance('pager')/browse-ready[.='true']">
	  <xforms:setvalue ref="instance('pager')/list" value="instance('browse')/result/@list"/>
	  <xforms:action if="instance('pager')/item-init[.='false']">
	    <xforms:setvalue ref="instance('pager')/item" value="'0'"/>
	    <xforms:setvalue ref="instance('pager')/page"
			     value="choose(instance('pager')/items[.>0],'1','0')"/>
	  </xforms:action>
	  <xforms:setvalue ref="instance('pager')/zoom" value="'0'"/>
	  <xforms:setvalue ref="instance('pager')/search" value="'0'"/>

	  <xforms:setvalue ref="instance('pager')/state" 
			   value="'default'"
			   if="instance('pager')/state[.='search']"/>
	  <xforms:load>
	    <xforms:resource
		value="instance('pager')/outline"/>
	  </xforms:load>
	  <xforms:load>
	    <xforms:resource
		value="instance('pager')/content"/>
	  </xforms:load>
	</xforms:action>
      </xforms:action>
    </xforms:model>

