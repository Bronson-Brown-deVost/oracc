    <div id="navRight" class="banner bborder-bot">

<!--
      <xforms:group ref="instance('pager')/glossary[string-length(.)=0
			 or . = '#none']">
 -->
      <xforms:group ref="instance('pager')/state[not(.='gbrowse')]">

	<xforms:group class="inline" ref="instance('pager')/item[not(.=0)]">
	  <p class="toccenter bg-dk">

	    <span class="arrow">
	      <xforms:select1 ref="instance('pager')/itemtype">
		<xforms:label/>
		<xforms:item>
		  <xforms:label>Exit item mode</xforms:label>
		  <xforms:value>#none</xforms:value>
		</xforms:item>
		<xforms:itemset nodeset="choose(instance('pager')/glossary[.='#none'],
					 instance('private')/item-dd/txt,
					 instance('private')/item-dd/cbd)">
		  <xforms:label ref="@l"/>
		  <xforms:value ref="@v"/>
		</xforms:itemset>
		<xforms:itemset nodeset="choose(instance('pager')/glossary[.='#none'],
					 instance('private')/item-dd/cat,
					 instance('private')/no-such-node)">
		  <xforms:label ref="@l"/>
		  <xforms:value ref="@v"/>
		</xforms:itemset>
		<xforms:action ev:event="xforms-value-changed"
			       if="instance('pager')/state[not(.='startup')]">
		  <xforms:setvalue ref="instance('pager')/item" 
				   value="'0'"
				   if="instance('pager')/itemtype[.='#none']"
				   />
		  <xforms:setvalue ref="instance('pager')/state" 
				   value="instance('pager')/pushed-state"
				   if="instance('pager')/itemtype[.='#none']"
				   />
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:select1>
	    </span>

	    <span class="arrow">
	      <xforms:trigger>
		<xforms:label>&lt;&lt;</xforms:label>
		<xforms:action ev:event="DOMActivate" 
			       if="instance('pager')/item > 1">
		  <xforms:setvalue ref="instance('pager')/item" value="instance('pager')/item - 1"/>
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:trigger>
	    </span>

	    <xforms:input ref="instance('pager')/item" class="page-input" incremental="true">
	      <xforms:label>Item </xforms:label>
	      <xforms:action ev:event="DOMActivate"
			     if=".[instance('pager')/item > 0
				 and instance('pager')/item &lt;= instance('pager')/items]"
			     >
		<xforms:send submission="post-pager"/>
	      </xforms:action>
	    </xforms:input>
	    of <xforms:output ref="instance('pager')/items"/>

	    <span class="arrow">
	      <xforms:trigger>
		<xforms:label>>></xforms:label>
		<xforms:action ev:event="DOMActivate"
			       if="instance('pager')/item &lt; instance('pager')/items">
		  <xforms:setvalue ref="instance('pager')/item" value="instance('pager')/item + 1"/>
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:trigger>
	    </span>

	    <span class="translations"/>

	    <span class="transonly">
	      <xforms:input ref="instance('pager')/transonly" incremental="true">
		<xforms:label>only</xforms:label>
		<xforms:action ev:event="xforms-value-changed"
			       if="instance('pager')/item > 0">
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:input>
	    </span>
	  </p>
	</xforms:group>
	
	<xforms:group ref="instance('pager')/item[.='0']">

	  <p class="toccenter bg-dk">

	    <span class="arrow">
	    <xforms:trigger ref="instance('pager')/zoom[.>0]">
	      <xforms:label>Exit zoom mode</xforms:label>
	      <xforms:action ev:event="DOMActivate">
		<xforms:setvalue ref="instance('pager')/zoom" value="'0'"/>
		<xforms:setvalue ref="instance('pager')/state"
				 value="choose(instance('config')/xpd:option[@name='outline-special-select'][@value='false'],'default','special')"/>
		  <xforms:send submission="post-pager"/>
	      </xforms:action>
	    </xforms:trigger>
	  </span>
	    
	    <span class="arrow">
	      <xforms:trigger>
		<xforms:label>&lt;&lt;</xforms:label>
		<xforms:action ev:event="DOMActivate" 
			       if="instance('pager')/page > 1">
		  <xforms:setvalue ref="instance('pager')/page" value="instance('pager')/page - 1"/>
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:trigger>
	    </span>
	    
	    <xforms:input ref="instance('pager')/page" class="page-input" incremental="true">
	      <xforms:label>Page </xforms:label>
	      <xforms:action ev:event="DOMActivate"
			     if=".[instance('pager')/page > 0
				 and instance('pager')/page &lt;= instance('pager')/pages]"
			     >
		<xforms:send submission="post-pager"/>
	      </xforms:action>
	    </xforms:input>
	    of <xforms:output ref="instance('pager')/pages"/>

	    <span class="arrow">
	      <xforms:trigger>
		<xforms:label>>></xforms:label>
		<xforms:action ev:event="DOMActivate"
			       if="instance('pager')/page &lt; instance('pager')/pages">
		  <xforms:setvalue ref="instance('pager')/page" value="instance('pager')/page + 1"/>
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:trigger>
	    </span>

	    <xforms:output ref="instance('pager')/items"/>
	    items.

	    <xforms:input ref="instance('pager')/per-page" class="page-input" incremental="true">
	      <xforms:label>Page-size: </xforms:label>
	      <xforms:action ev:event="DOMActivate">
		<xforms:send submission="post-pager"/>
	      </xforms:action>
	    </xforms:input>
	    <span class="cetype">
	      <xforms:select1 ref="instance('pager')/cetype">
		<xforms:label></xforms:label>
		<xforms:item>
		  <xforms:label>Line</xforms:label>
		  <xforms:value>line</xforms:value>
		</xforms:item>
		<xforms:item>
		  <xforms:label>Sentence</xforms:label>
		  <xforms:value>unit</xforms:value>
		</xforms:item>
		<xforms:item>
		  <xforms:label>KWIC</xforms:label>
		  <xforms:value>kwic</xforms:value>
		</xforms:item>
		<xforms:action ev:event="xforms-value-changed"
			       if="instance('search')/search/toks[string-length(.)>0]"
			       >
		  <xforms:send submission="post-search"/>
		</xforms:action>
		<xforms:action ev:event="xforms-value-changed"
			       if="contains(instance('browse')/browse-list,'xis#r')"
			       >
		  <xforms:send submission="post-pager"/>
		</xforms:action>
	      </xforms:select1>
	    </span>
	  </p>

	</xforms:group>

      </xforms:group>
      
      <!-- <div class="padding"/> -->
    </div>

    <div id="left">
      <xforms:group ref="instance('pager')/outline-state[.='show']">
	<div id="outline" class="border-bottom border-right">
